        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/artist_text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Musician2"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/artist_image_view_2"
        app:layout_constraintBottom_toBottomOf="@+id/artist_image_view_2"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/artist_image_view_2"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/artist_image_view_3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/artist_image_view_2"
        android:src="@drawable/undefined_person_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/artist_text_view_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Musician3"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/artist_image_view_3"
        app:layout_constraintBottom_toBottomOf="@+id/artist_image_view_3"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/artist_image_view_3"
        android:layout_marginTop="8dp"/>

